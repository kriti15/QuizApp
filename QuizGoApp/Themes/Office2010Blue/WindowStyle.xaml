<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QuizGoApp.Themes.Office2010Blue">

    <Style x:Key="WindowStyleKey" TargetType="{x:Type Window}">
        <Setter Property="Foreground"
                Value="LightBlue"></Setter>
        <Setter Property="Background"
                Value="LightBlue"></Setter>
    </Style>

    <Style x:Key="UserControlStyleKey" TargetType="{x:Type UserControl}">
        <Setter Property="Foreground"
                Value="LightBlue"></Setter>
        <Setter Property="Background"
                Value="LightBlue"></Setter>
        
    </Style>

    <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="MidnightBlue" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst" />
        <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
        <Setter Property="FlowDirection" Value="LeftToRight" />
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource TextBoxValidationToolTipTemplate}"/>
    </Style>
</ResourceDictionary>